@model UserListingViewModel

@{
    ViewData["Title"] = "User Administration";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Name</th>
            <th>Add to Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>
                    <form method="post" asp-controller="Users" asp-action=@nameof(UsersController.AddToRole)>
                        <div class="row">
                            <input hidden name="UserId" asp-for=@user.Id />

                            <div class="col-md-8">
                                <select name="Role" asp-items="Model.Roles" class="form-control"></select>
                            </div>

                            <div class="col-md-4">
                                <input type="submit" class="btn btn-primary" value="Add to Role" />
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
